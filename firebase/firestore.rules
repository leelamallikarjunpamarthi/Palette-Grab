rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Palettes collection
    match /palettes/{paletteId} {
      // Allow read if user owns the palette
      allow read: if isAuthenticated() && isOwner(resource.data.userId);
      
      // Allow create if authenticated and setting correct userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Allow update if user owns the palette
      allow update: if isAuthenticated() && isOwner(resource.data.userId);
      
      // Allow delete if user owns the palette
      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }
    
    // Colors (history) collection
    match /colors/{colorId} {
      // Allow read if user owns the color
      allow read: if isAuthenticated() && isOwner(resource.data.userId);
      
      // Allow create if authenticated and setting correct userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Allow delete if user owns the color
      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }
  }
}
